<!-- views/pages/about.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body>

  <header>
    <% include ../partials/header %>
  </header>

  <div class="container">
    <main>
      <div class="form-group">
        <label for="schemaName">Nome</label>
        <input type="text" class="form-control" id="schemaName" value="<%= name %>">
      </div>

      <div class="form-group">
        <label for="schemaName">Schema</label>
        <div id="editor"><%= schema %></div>
      </div>

      <button id="saveButton" type="submit" class="btn btn-primary">Salvar</button>
      <button id="importButton" type="submit" class="btn btn-warning" data-toggle="modal" data-target="#exampleModal">Importar</button>

      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="exampleModalLabel">Importar</h4>
            </div>
            <div class="modal-body">
              <form>
                <div class="form-group">
                  <label for="message-text" class="control-label">Json de exemplo:</label>
                  <textarea class="form-control" id="jsonExample" rows="10"></textarea>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button id="closeModalButton" type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
              <button id="importJson" type="button" class="btn btn-primary">Importar</button>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <br /><br />

  <footer class="footer">
    <% include ../partials/footer %>
  </footer>

  <script type="text/javascript" src="/js/vendor/ace.js" charset="utf-8"></script>
  <script type="text/javascript" src="/js/schema.js"></script>
  <script type="text/javascript">
    var aceEditor = window.ace.edit("editor");

    aceEditor.setOptions({
      showPrintMargin: false,
      maxLines: 20,
      minLines: 20,
      fontSize: "100%"
    });
    
    aceEditor.setTheme("ace/theme/twilight");
    aceEditor.renderer.setOption("showLineNumbers", true);
    aceEditor.getSession().setMode("ace/mode/json");
  </script>


</body>

</html>